\ProvidesExplFile{soranus12pt++.clo}{2018/10/11}{0.1.0}{Soranus class 12pt++ size option.}

\EditInstance {fontsize} {miniscule}
  {
    point-size          = 6.0pt,
    baseline-separation = 7.75pt
  }

\EditInstance {fontsize} {tiny}
  {
    point-size          = 7.25pt,
    baseline-separation = 9.5pt
  }

\EditInstance {fontsize} {scriptsize}
  {
    point-size          = 8.5pt,
    baseline-separation = 11.0pt
  }

\EditInstance {fontsize} {footnotesize}
  {
    point-size          = 9.5pt,
    baseline-separation = 12.25pt
  }

\EditInstance {fontsize} {small}
  {
    point-size          = 10.75pt,
    baseline-separation = 14.0pt
  }

\EditInstance {fontsize} {normalsize}
